{
    "manifest_version": 3,
    "name": "M+ Web Chat Muter",
    "version": "1.0",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "description": "Add mute functionality to M+ Web Chat",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://web.mplusapp.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.mplusapp.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "inject.js"
            ],
            "matches": [
                "https://web.mplusapp.com/*"
            ]
        }
    ]
}